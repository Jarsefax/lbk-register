<Window x:Class="LbkRegister.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LbkRegister.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="725">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
            <Button Content="Registrera anmälan" Click="RegisterButton_Click" Width="200" Height="50" Margin="0,0,0,10" />
            <Button Content="Skapa katalog" Click="CatalogButton_Click" Width="200" Height="50" Margin="0,10,0,0" />
        </StackPanel>

        <Grid Grid.Row="0" Grid.Column="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Name="sixMonthsLabel" />
            <TextBlock Grid.Column="0" Grid.Row="1" Name="nineMonthsLabel" />
            <TextBlock Grid.Column="0" Grid.Row="2" Name="fifteenMonthsLabel" />
            <TextBlock Grid.Column="0" Grid.Row="3" Name="eightYearsLabel" />
            <Separator Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" />
            <TextBlock Grid.Column="0" Grid.Row="5" Text="Totalt" />            

            <TextBlock Grid.Column="1" Grid.Row="0" Margin="40,0,0,0" Text="{Binding SixMonthsCount}" />
            <TextBlock Grid.Column="1" Grid.Row="1" Margin="40,0,0,0" Text="{Binding NineMonthsCount}" />
            <TextBlock Grid.Column="1" Grid.Row="2" Margin="40,0,0,0" Text="{Binding FifteenMonthsCount}" />
            <TextBlock Grid.Column="1" Grid.Row="3" Margin="40,0,0,0" Text="{Binding EightYearsCount}" />
            <TextBlock Grid.Column="1" Grid.Row="5" Margin="40,0,0,0" Text="{Binding TotalCount}" />
        </Grid>

        <TextBox IsReadOnly="True" Text="{Binding Emails}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="20,10" />

        <ListView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" ItemsSource="{Binding Registrations}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ras" Width="Auto" DisplayMemberBinding="{Binding Breed}" />
                    <GridViewColumn Header="Namn" Width="Auto" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Ägare" Width="Auto" DisplayMemberBinding="{Binding OwnerName}" />
                    <GridViewColumn Header="Klass" Width="Auto" DisplayMemberBinding="{Binding GroupName}" />
                    <GridViewColumn Header="E-post" Width="Auto" DisplayMemberBinding="{Binding OwnerEmail}" />
                    <GridViewColumn Header="Byt klass">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button                                    
                                    Width="40"
                                    Height="15"
                                    VerticalAlignment="Center"
                                    Click="GroupChangeButton_Click" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Ta bort">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Width="40"
                                    Height="15"
                                    VerticalAlignment="Center"
                                    Click="DeleteButton_Click" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
